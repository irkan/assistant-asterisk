// HÉ™r bir aktiv zÉ™ng Ã¼Ã§Ã¼n bÃ¼tÃ¼n resurslarÄ± saxlayan obyekt
const callStates = new Map();
let nextUdpPort = BASE_UDP_PORT;

// NÃ¶vbÉ™dÉ™ki sÉ™s faylÄ±nÄ± sÉ™slÉ™ndirÉ™n funksiya
async function playNextInQueue(channelId, channel, client) {
    const state = callStates.get(channelId);
    if (!state) {
        console.log(`[${channelId}] [QUEUE] State tapÄ±lmadÄ±, nÃ¶vbÉ™ dayandÄ±rÄ±lÄ±r.`);
        return;
    }
    
    // ÆgÉ™r nÃ¶vbÉ™dÉ™ fayl yoxdursa vÉ™ generation tamamlanÄ±bsa, bitiririk
    if (state.playbackQueue.length === 0) {
        if (state.generationComplete) {
            console.log(`[${channelId}] [QUEUE] NÃ¶vbÉ™ boÅŸdur vÉ™ generation tamamlanÄ±b. SÉ™slÉ™ndirmÉ™ bitdi.`);
            state.isPlayingQueue = false;
            
            // BÃ¼tÃ¼n chunk fayllarÄ±nÄ± tÉ™mizlÉ™yirik
            cleanupChunkFiles(channelId);
        } else {
            console.log(`[${channelId}] [QUEUE] NÃ¶vbÉ™ boÅŸdur, yeni chunk gÃ¶zlÉ™nilir...`);
            state.isPlayingQueue = false;
        }
        return;
    }
    
    state.isPlayingQueue = true;
    const chunk = state.playbackQueue.shift(); // NÃ¶vbÉ™dÉ™n ilk elementi gÃ¶tÃ¼rÃ¼rÃ¼k
    
    console.log(`[${channelId}] [QUEUE] Chunk ${chunk.chunkIndex} sÉ™slÉ™ndirilir. Qalan nÃ¶vbÉ™: ${state.playbackQueue.length}`);
    
    try {
        const playback = client.Playback();
        state.currentPlayback = playback; // HazÄ±rkÄ± playback-i saxlayÄ±rÄ±q
        
        // Playback bitdikdÉ™ nÃ¶vbÉ™dÉ™ki nÃ¶vbÉ™ti faylÄ± sÉ™slÉ™ndiririk
        playback.once('PlaybackFinished', async () => {
            console.log(`[${channelId}] [QUEUE] Chunk ${chunk.chunkIndex} sÉ™slÉ™ndirmÉ™ tamamlandÄ±.`);
            
            state.currentPlayback = null; // Playback bitdi, referansÄ± tÉ™mizlÉ™yirik
            
            // SÉ™slÉ™ndirilmiÅŸ faylÄ± silirik
            try {
                if (fs.existsSync(chunk.filePath)) {
                    fs.unlinkSync(chunk.filePath);
                    console.log(`[${channelId}] [QUEUE] Chunk ${chunk.chunkIndex} faylÄ± silindi.`);
                }
            } catch (err) {
                console.error(`[${channelId}] [QUEUE] Chunk faylÄ±nÄ± silÉ™rkÉ™n xÉ™ta: ${err.message}`);
            }
            
            // NÃ¶vbÉ™dÉ™ki nÃ¶vbÉ™ti faylÄ± sÉ™slÉ™ndiririk
            playNextInQueue(channelId, channel, client);
        });
        
        // XÉ™ta baÅŸ verÉ™rsÉ™ dÉ™ nÃ¶vbÉ™yÉ™ davam edirik
        playback.once('PlaybackFailed', async (event, playbackObj) => {
            console.error(`[${channelId}] [QUEUE] Chunk ${chunk.chunkIndex} sÉ™slÉ™ndirmÉ™ xÉ™tasÄ±:`, event);
            
            // XÉ™talÄ± faylÄ± silirik
            try {
                if (fs.existsSync(chunk.filePath)) {
                    fs.unlinkSync(chunk.filePath);
                }
            } catch (err) {
                console.error(`[${channelId}] [QUEUE] XÉ™talÄ± chunk faylÄ±nÄ± silÉ™rkÉ™n xÉ™ta: ${err.message}`);
            }
            
            // NÃ¶vbÉ™yÉ™ davam edirik
            playNextInQueue(channelId, channel, client);
        });
        
        // SÉ™slÉ™ndirmÉ™ni baÅŸladÄ±rÄ±q
        await channel.play({ 
            media: `sound:${chunk.soundName}`, 
            playbackId: playback.id 
        });
        
        console.log(`[${channelId}] [QUEUE] âœ… Chunk ${chunk.chunkIndex} sÉ™slÉ™ndirmÉ™ baÅŸladÄ±ldÄ±.`);
        
    } catch (err) {
        console.error(`[${channelId}] [QUEUE] Chunk sÉ™slÉ™ndirÉ™rkÉ™n xÉ™ta:`, err);
        
        // XÉ™ta baÅŸ versÉ™ dÉ™ nÃ¶vbÉ™yÉ™ davam edirik
        setTimeout(() => {
            playNextInQueue(channelId, channel, client);
        }, 100);
    }
}

// BÃ¼tÃ¼n chunk fayllarÄ±nÄ± tÉ™mizlÉ™yÉ™n funksiya
function cleanupChunkFiles(channelId) {
    console.log(`[${channelId}] [CLEANUP] Chunk fayllarÄ± tÉ™mizlÉ™nir...`);
    
    try {
        const files = fs.readdirSync(SOUNDS_DIR);
        const pattern = new RegExp(`^playback_${channelId}_chunk_\\d+\\.(ulaw|sln16)$`);
        
        files.forEach(file => {
            if (pattern.test(file)) {
                const filePath = path.join(SOUNDS_DIR, file);
                try {
                    fs.unlinkSync(filePath);
                    console.log(`[${channelId}] [CLEANUP] Silindi: ${file}`);
                } catch (err) {
                    console.error(`[${channelId}] [CLEANUP] FaylÄ± silÉ™rkÉ™n xÉ™ta: ${file} - ${err.message}`);
                }
            }
        });
    } catch (err) {
        console.error(`[${channelId}] [CLEANUP] Chunk fayllarÄ±nÄ± tÉ™mizlÉ™yÉ™rkÉ™n xÉ™ta:`, err);
    }
}

// ZÉ™ngÉ™ aid bÃ¼tÃ¼n resurslarÄ± (sox, pipe, ws, kanallar) tÉ™mizlÉ™yÉ™n funksiya
async function cleanupCallResources(channelId) {
    if (callStates.has(channelId)) {
        const state = callStates.get(channelId);
        
        console.log(`[${channelId}] [CLEANUP] TÉ™mizlÉ™mÉ™ baÅŸlayÄ±r...`);
        
        // TÉ™mizlÉ™mÉ™dÉ™n É™vvÉ™l sÉ™s yazÄ±larÄ±nÄ± yaddaÅŸa veririk
        console.log(`[${channelId}] [CLEANUP] SÉ™s yazÄ±larÄ± saxlanÄ±lÄ±r...`);
        await saveIncomingRecording(channelId, state.audioChunks);
        await saveOutgoingRecording(channelId, state.outgoingAudioChunks);
        await savePlaybackDebugRecording(channelId, state.playbackAudioChunks); // Debug faylÄ±nÄ± saxlayÄ±rÄ±q
        
        console.log(`[${channelId}] BÃ¼tÃ¼n resurslar tÉ™mizlÉ™nir...`);

        // Davam edÉ™n sÉ™slÉ™ndirmÉ™ni dayandÄ±rÄ±rÄ±q
        if (state.playback && !state.playback.destroyed) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: Playback obyektini dayandÄ±rÄ±ram...`);
            try { await state.playback.stop(); } catch (e) { console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: Playback dayandÄ±rarkÉ™n xÉ™ta (normaldÄ±r): ${e.message}`); }
        }
        
        // Chunk fayllarÄ±nÄ± tÉ™mizlÉ™yirik
        cleanupChunkFiles(channelId);
        
        // sox prosesini dayandÄ±rÄ±rÄ±q
        if (state.soxProcess) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: sox prosesini dayandÄ±rÄ±ram...`);
            state.soxProcess.kill('SIGTERM');
        }
        // ulaw->slin16 konversiya prosesini dayandÄ±rÄ±rÄ±q
        if (state.ulawToSlinProcess) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: ulaw->slin16 sox prosesini dayandÄ±rÄ±ram...`);
            state.ulawToSlinProcess.kill('SIGTERM');
        }
        // YaradÄ±lmÄ±ÅŸ named pipe faylÄ±nÄ± silirik
        if (state.pipePath && fs.existsSync(state.pipePath)) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: Named pipe faylÄ±nÄ± (${state.pipePath}) silirÉ™m...`);
            fs.unlinkSync(state.pipePath);
        }
        // WebSocket baÄŸlantÄ±sÄ±nÄ± baÄŸlayÄ±rÄ±q
        if (state.ws && state.ws.readyState === WebSocket.OPEN) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: WebSocket baÄŸlantÄ±sÄ±nÄ± baÄŸlayÄ±ram...`);
            state.ws.close();
        }
        // External media kanalÄ±nÄ± baÄŸlayÄ±rÄ±q
        if (state.externalChannel && !state.externalChannel.destroyed) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: External media kanalÄ±nÄ± baÄŸlayÄ±ram...`);
            try { await state.externalChannel.hangup(); } catch (e) { console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: External media kanalÄ±nÄ± baÄŸlayarkÉ™n xÉ™ta (normaldÄ±r): ${e.message}`); }
        }
        // UDP serveri dayandÄ±rÄ±rÄ±q
        if (state.udpServer) {
            console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: UDP serverini baÄŸlayÄ±ram...`);
            state.udpServer.close();
        }
        
        callStates.delete(channelId);
        console.log(`[${channelId}] Resurslar uÄŸurla tÉ™mizlÉ™ndi.`);
    } else {
        console.log(`[${channelId}] TÉ™mizlÉ™mÉ™: Bu kanal Ã¼Ã§Ã¼n heÃ§ bir resurs tapÄ±lmadÄ± (artÄ±q tÉ™mizlÉ™nib).`);
    }
}

